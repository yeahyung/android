<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lab6_3"
    android:layout_margin="5dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="이름: "
    android:id="@+id/cheolsu"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/name"
        android:layout_toRightOf="@+id/cheolsu"
        android:layout_alignBaseline="@id/cheolsu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="학번: "
        android:id="@+id/snn"
        android:layout_below="@+id/name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/getSN"
        android:layout_toRightOf="@+id/snn"
        android:layout_alignBaseline="@+id/snn"/>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snn"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/linear">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="추가"
            android:id="@+id/btn1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="삭제"
            android:id="@+id/btn2"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:id="@+id/list"></ListView>
</RelativeLayout>